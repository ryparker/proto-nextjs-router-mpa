{
  "name": "nextjs-web-app-template",
  "version": "0.1.0",
  "private": true,
  "org": "ryparker",
  "repository": "nextjs-web-app-template",
  "owner": "Ryan Parker",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "plop": "plop",
    "lint": "yarn lint:lockfile && yarn lint:types && yarn lint:next && yarn lint:prettier && yarn lint:eslint",
    "lint:lockfile": "npx lockfile-lint --path yarn.lock --allowed-hosts npm yarn --validate-https",
    "lint:types": "tsc --noEmit",
    "lint:next": "next lint",
    "lint:prettier": "prettier --check src",
    "lint:eslint": "eslint .",
    "fix": "yarn fix:prettier && yarn fix:eslint",
    "fix:prettier": "prettier --write src",
    "fix:eslint": "eslint --fix .",
    "optimize": "svgo -f ./public/svgs",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "clean": "rimraf .next",
    "chromatic": "npx chromatic --project-token <CHROMATIC_TOKEN> --exit-once-uploaded"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.0.0",
    "framer-motion": "^7.3.2",
    "lodash": "^4.17.21",
    "next": "^12.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sharp": "^0.31.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.5.10",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-react": "^1.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.0.0",
    "@types/jest-axe": "^3.5.4",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.7.16",
    "@types/react": "18.0.18",
    "@types/styled-components": "^5.1.26",
    "chromatic": "^6.9.0",
    "eslint": "8.23.0",
    "eslint-config-next": "12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-storybook": "^0.6.4",
    "jest": "^29.0.2",
    "jest-axe": "^6.0.0",
    "plop": "^3.1.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "storybook-addon-next-router": "^4.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  }
}
